<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/secondary_image"
        android:layout_width="88dp"
        android:layout_height="71dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_na" />


    <TextView
        android:id="@+id/day_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Day of week"
        android:textSize="@dimen/date_size"
        app:layout_constraintStart_toEndOf="@+id/secondary_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/secondary_description_text"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Conditions"
        android:textSize="@dimen/date_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/secondary_image"
        app:layout_constraintTop_toBottomOf="@+id/day_name_text" />

    <TextView
        android:id="@+id/secondary_day_temp"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginTop="16dp"
        android:text="20"
        android:textAlignment="textEnd"
        android:textSize="@dimen/date_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/secondary_night_temp"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginTop="8dp"
        android:text="10"
        android:textAlignment="textEnd"
        android:textSize="@dimen/date_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondary_day_temp" />

</android.support.constraint.ConstraintLayout>